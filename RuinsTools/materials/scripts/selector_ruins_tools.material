import * from "materials/scripts/selector.material"

material selector/marker_sell_place_ruins_tool : selector/marker_base
{
	set_texture_alias diffuse			materials/textures/selector/marker_sell_place_ruins_tool.dds
	set_texture_alias emissive			materials/textures/selector/marker_sell_place_ruins_tool_emissive.dds

	technique
	{
		pass
		{
			depth_check			off
			depth_write			off
		}
	}
}



material selector/marker_sell_ruins_eraser_tool : selector/marker_base
{
	set_texture_alias diffuse			materials/textures/selector/marker_sell_ruins_eraser_tool.dds
	set_texture_alias emissive			materials/textures/selector/marker_sell_ruins_eraser_tool_emissive.dds

	technique
	{
		pass
		{
			depth_check			off
			depth_write			off
		}
	}
}