import * from "materials/scripts/pbr.material"

material units/drones/drone_repair_facility : pbr/units
{
	set_texture_alias albedo			materials/textures/units/drones/drone_repair_facility_albedo.dds
	set_texture_alias normal			materials/textures/units/drones/drone_repair_facility_normal.dds
	set_texture_alias packed			materials/textures/units/drones/drone_repair_facility_packed.dds
	set_texture_alias emissive			materials/textures/units/drones/drone_repair_facility_emissive.dds

	glow 14
}

