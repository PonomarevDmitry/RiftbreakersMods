import * from "materials/scripts/pbr.material"

material ground/pebbles/sand_pebbles : pbr/default
{
	terrain_type 	 "pebbles"

	set_texture_alias normal materials/textures/ground/pebbles/sand_pebbles_normal.dds
	set_texture_alias albedo materials/textures/ground/pebbles/sand_pebbles_albedo.dds
	set_texture_alias packed materials/textures/ground/pebbles/sand_pebbles_packed.dds
}

material ground/pebbles/brown_pebbles_01 : pbr/default
{
	terrain_type 	 "default"

	set_texture_alias normal materials/textures/ground/pebbles/brown_pebbles_01_normal.dds
	set_texture_alias albedo materials/textures/ground/pebbles/brown_pebbles_01_albedo.dds
	set_texture_alias packed materials/textures/ground/pebbles/brown_pebbles_01_packed.dds
}

material ground/pebbles/beach_pebbles : pbr/default
{
	terrain_type 	 "pebbles"

	set_texture_alias normal materials/textures/ground/pebbles/beach_pebbles_normal.dds
	set_texture_alias albedo materials/textures/ground/pebbles/beach_pebbles_albedo.dds
	set_texture_alias packed materials/textures/ground/pebbles/beach_pebbles_packed.dds
}
