	render_group 50
	feature "gbuffer|shadow"
	
	technique
	{
		pass
		{
			depth_write on
			depth_check on
			cull_hardware none
			
			glow 6

			dissolve 0 10 20 1

			vertex_program_ref deferred_height_vp 
			{
			}

			fragment_program_ref deferred_height_dissolve_fp
