material pbr/default
{ 
	render_group 50
	feature "gbuffer|shadow"

	technique
	{
		pass
		{
			depth_write on
			depth_check on

			glow 6

			vertex_program_ref deferred_gbuffer_vp 
			{
			}

			fragment_program_ref deferred_gbuffer_fp
			{

			}
			
			texture_unit albedo 
			{
				texture materials/textures/error.dds
				filtering anisotropic
				max_anisotropy 16
			}
			texture_unit normal 
			{	
				texture materials/textures/normalmap_flat_bc5.dds
				filtering anisotropic
				max_anisotropy 16
			}
			texture_unit packed
			{	
				texture materials/textures/color_white.dds
				filtering anisotropic
				max_anisotropy 16
			}
			texture_unit emissive 
			{	
				texture materials/textures/color_black.dds
				filtering anisotropic
				max_anisotropy 16
			}
			texture_unit gradient 
			{	
				texture materials/textures/color_white.dds
				filtering bilinear
			}
			texture_unit dissolve 
			{	
				texture materials/textures/noise.dds
				filtering bilinear
			}
		}	
	}
}

material pbr/transparent : pbr/default
{ 	
	render_group 220
	feature "forward_lit"

	technique
	{
		pass
		{
			depth_write off
			depth_check on
			scene_blend alpha_blend

			vertex_program_ref forward_object_texture_world_tangent_vp 
			{
			}

			fragment_program_ref forward_lit_fp
			{

			}

			texture_unit albedo 
			{
				texture materials/textures/glass_albedo.dds
				filtering anisotropic
				max_anisotropy 16
			}
			texture_unit normal 
			{	
				texture materials/textures/glass_normal.dds
				filtering anisotropic
				max_anisotropy 16
			}
			texture_unit packed
			{	
				texture materials/textures/glass_packed.dds
				filtering anisotropic
				max_anisotropy 16
			}
			texture_unit emissive 
			{	
				texture materials/textures/color_black.dds
				filtering anisotropic
				max_anisotropy 16
			}
			texture_unit gradient 
			{	
				texture materials/textures/color_white.dds
				filtering bilinear
			}
			texture_unit dissolve 
			{	
				texture materials/textures/noise.dds
				filtering bilinear
			}
            texture_unit volumetric_fog
			{
				texture 			materials/textures/black_volume.dds
				texture_type 		3d
				content_type 		shared volumetric_fog
				tex_address_mode 	clamp
				filtering 			bilinear
			}
			buffer_unit transparent_light_list
			{
				content_type shared transparent_light_list
			}
			buffer_unit light_data_list
			{
				content_type shared light_data_list
			}
			buffer_unit light_shadow_matrix_list
			{
				content_type shared light_shadow_matrix_list
			}
		}
	}
}

