import * from "materials/scripts/pbr.material"

material props/water/water_lily : pbr/vegetation_twosided

{
	set_texture_alias albedo		materials/textures/props/water/water_lily_albedo.dds
	set_texture_alias normal			materials/textures/props/water/water_lily_normal.dds
	set_texture_alias packed			materials/textures/props/water/water_lily_packed.dds
	set_texture_alias emissive			materials/textures/props/water/water_lily_emissive.dds

	glow 4
	subsurface 0.8 0.6 0.6 0.6

}


material props/water/water_lily_skin1 : pbr/vegetation_twosided

{
	set_texture_alias albedo		materials/textures/props/water/water_lily_skin1_albedo.dds
	set_texture_alias normal			materials/textures/props/water/water_lily_skin1_normal.dds
	set_texture_alias packed			materials/textures/props/water/water_lily_skin1_packed.dds
	set_texture_alias emissive			materials/textures/props/water/water_lily_skin1_emissive.dds

	glow 3.5
	subsurface 0.6 0.6 0.6 0.6

}


material props/water/water_lily_skin2 : pbr/vegetation_twosided

{
	set_texture_alias albedo		materials/textures/props/water/water_lily_skin2_albedo.dds
	set_texture_alias normal			materials/textures/props/water/water_lily_skin2_normal.dds
	set_texture_alias packed			materials/textures/props/water/water_lily_skin2_packed.dds
	set_texture_alias emissive			materials/textures/props/water/water_lily_skin2_emissive.dds

	glow 8
	subsurface 0.6 0.6 0.6 0.6

}
