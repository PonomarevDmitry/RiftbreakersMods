import * from "materials/scripts/pbr.material"
import * from "materials/scripts/buildings_base.material"

material buildings/defense/alien_tower_plasma : buildings/destructible
{
	set_texture_alias albedo			materials/textures/units/ground/alien_tower_plasma_albedo.dds
	set_texture_alias normal			materials/textures/units/ground/alien_tower_plasma_normal.dds
	set_texture_alias packed			materials/textures/units/ground/alien_tower_plasma_packed.dds
	set_texture_alias emissive			materials/textures/units/ground/alien_tower_plasma_emissive.dds

	glow 6
}

material buildings/defense/alien_tower_plasma_dissolve : pbr/height_dissolve
{
	set_texture_alias albedo			materials/textures/buildings/defense/tower_basic_lvl_1_albedo.dds
	set_texture_alias normal			materials/textures/buildings/defense/tower_basic_lvl_1_normal.dds
	set_texture_alias packed			materials/textures/buildings/defense/tower_basic_lvl_1_packed.dds
	set_texture_alias emissive			materials/textures/buildings/defense/tower_basic_lvl_1_emissive.dds
}