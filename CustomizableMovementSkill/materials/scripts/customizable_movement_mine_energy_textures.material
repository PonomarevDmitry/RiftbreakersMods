import * from "materials/scripts/pbr.material"

material items/customizable_movement_mines/proximity_mine_energy : pbr/default
{
	dissolve 0 10 20 1

	set_texture_alias albedo			materials/textures/items/customizable_movement_mines/proximity_mine_energy_albedo.dds
	set_texture_alias normal			materials/textures/items/customizable_movement_mines/proximity_mine_energy_normal.dds
	set_texture_alias packed			materials/textures/items/customizable_movement_mines/proximity_mine_energy_packed.dds
	set_texture_alias emissive			materials/textures/items/customizable_movement_mines/proximity_mine_energy_emissive.dds

	glow 8
}