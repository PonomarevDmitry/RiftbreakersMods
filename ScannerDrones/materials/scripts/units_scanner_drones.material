import * from "materials/scripts/pbr.material"

material units/drones/drone_player_detector : pbr/units
{
	set_texture_alias albedo			materials/textures/units/drones/drone_player_detector_albedo.dds
	set_texture_alias normal			materials/textures/units/drones/drone_player_detector_normal.dds
	set_texture_alias packed			materials/textures/units/drones/drone_player_detector_packed.dds
	set_texture_alias emissive			materials/textures/units/drones/drone_player_detector_emissive.dds

	glow 16
}

material units/drones/drone_player_scanner : pbr/units
{
	set_texture_alias albedo			materials/textures/units/drones/drone_player_scanner_albedo.dds
	set_texture_alias normal			materials/textures/units/drones/drone_player_scanner_normal.dds
	set_texture_alias packed			materials/textures/units/drones/drone_player_scanner_packed.dds
	set_texture_alias emissive			materials/textures/units/drones/drone_player_scanner_emissive.dds

	glow 16
}