// cosmo_gun

material items/weapons/cosmo_gun : pbr/default
{
	dissolve 0 10 20 1

	set_texture_alias albedo			materials/textures/items/weapons/cosmo_gun_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/plasma_gun_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/plasma_gun_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmo_gun_emissive.dds

	glow 15
}

