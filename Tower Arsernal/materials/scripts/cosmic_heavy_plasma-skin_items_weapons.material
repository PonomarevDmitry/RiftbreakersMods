// cosmic_heavy_plasma

material items/weapons/cosmic_heavy_plasma : pbr/default
{
	dissolve 0 10 20 1

	set_texture_alias albedo			materials/textures/items/weapons/cosmic_heavy_plasma_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/heavy_plasma_gun_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/heavy_plasma_gun_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_heavy_plasma_emissive.dds

	glow 8
}

