import * from "materials/scripts/pbr.material"
import * from "materials/scripts/buildings_base.material"
import * from "materials/scripts/gui.material"

material buildings/resources/magmatic_converter : buildings/destructible
{
	set_texture_alias albedo			materials/textures/buildings/resources/magmatic_converter_albedo.dds
	set_texture_alias normal			materials/textures/buildings/resources/plasma_converter_normal.dds
	set_texture_alias packed			materials/textures/buildings/resources/plasma_converter_packed.dds
	set_texture_alias emissive			materials/textures/buildings/resources/magmatic_converter_emissive.dds

	glow 7
}

material buildings/resources/magmatic_converter_dissolve : pbr/height_dissolve
{
	set_texture_alias albedo			materials/textures/buildings/resources/magmatic_converter_albedo.dds
	set_texture_alias normal			materials/textures/buildings/resources/plasma_converter_normal.dds
	set_texture_alias packed			materials/textures/buildings/resources/plasma_converter_packed.dds
	set_texture_alias emissive			materials/textures/buildings/resources/magmatic_converter_emissive.dds

	glow 7
}


//buildings/resources/magmatic_converter build icons

material gui/hud/building_icons/magmatic_converter : gui/default
{
	set_texture_alias diffuse materials/textures/gui/hud/building_icons/magmatic_converter.dds
}

