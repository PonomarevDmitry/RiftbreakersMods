// cosmic_corrosive_gun

material items/weapons/cosmic_corrosive_gun : pbr/default
{
	dissolve 0 10 20 1

	set_texture_alias albedo			materials/textures/items/weapons/cosmic_corrosive_gun_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/corrosive_gun_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/corrosive_gun_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_corrosive_gun_emissive.dds

	glow 3
}

