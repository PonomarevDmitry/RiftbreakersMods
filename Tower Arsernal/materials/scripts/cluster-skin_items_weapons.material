// fire_cluster_spitter

material items/weapons/fire_cluster_spitter : pbr/default
{

	set_texture_alias albedo			materials/textures/items/weapons/fire_cluster_spitter_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/plasma_gun_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/plasma_gun_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/fire_cluster_spitter_emissive.dds

	glow 3
}

