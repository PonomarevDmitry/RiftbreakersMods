import * from "materials/scripts/pbr.material"
import * from "materials/scripts/buildings_base.material"

material buildings/defense/tower_scanner : buildings/destructible
{
	set_texture_alias albedo			materials/textures/buildings/defense/tower_scanner_albedo.dds
	set_texture_alias normal			materials/textures/buildings/defense/tower_scanner_normal.dds
	set_texture_alias packed			materials/textures/buildings/defense/tower_scanner_packed.dds
	set_texture_alias emissive			materials/textures/buildings/defense/tower_scanner_emissive.dds
}

material buildings/defense/tower_scanner_dissolve : pbr/height_dissolve
{
	set_texture_alias albedo			materials/textures/buildings/defense/tower_scanner_albedo.dds
	set_texture_alias normal			materials/textures/buildings/defense/tower_scanner_normal.dds
	set_texture_alias packed			materials/textures/buildings/defense/tower_scanner_packed.dds
	set_texture_alias emissive			materials/textures/buildings/defense/tower_scanner_emissive.dds
}
