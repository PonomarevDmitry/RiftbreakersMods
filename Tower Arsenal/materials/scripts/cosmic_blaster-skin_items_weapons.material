	set_texture_alias packed			materials/textures/items/weapons/plasma_gun_superior_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_blaster_superior_emissive.dds

	glow 10
}

material items/weapons/cosmic_blaster_extreme : pbr/default
{
	set_texture_alias albedo			materials/textures/items/weapons/cosmic_blaster_extreme_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/plasma_gun_extreme_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/plasma_gun_extreme_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_blaster_extreme_emissive.dds

	glow 11
