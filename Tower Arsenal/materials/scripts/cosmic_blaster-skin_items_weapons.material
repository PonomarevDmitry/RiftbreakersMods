// cosmic_blaster

material items/weapons/cosmic_blaster : pbr/default
{

	set_texture_alias albedo			materials/textures/items/weapons/cosmic_blaster_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/plasma_gun_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/plasma_gun_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_blaster_emissive.dds

	glow 8
}

material items/weapons/cosmic_blaster_advanced : pbr/default
{

	set_texture_alias albedo			materials/textures/items/weapons/cosmic_blaster_advanced_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/plasma_gun_advanced_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/plasma_gun_advanced_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_blaster_superior_emissive.dds

	glow 9
}

material items/weapons/cosmic_blaster_superior : pbr/default
{
	set_texture_alias albedo			materials/textures/items/weapons/cosmic_blaster_superior_albedo.dds
