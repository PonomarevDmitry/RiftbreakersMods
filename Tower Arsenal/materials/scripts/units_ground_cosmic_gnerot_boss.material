import * from "materials/scripts/units_base.material"
import * from "materials/scripts/gui.material"

material units/ground/cosmic_gnerot_boss : units/ground/cracks_caverns
{
	set_texture_alias albedo			materials/textures/units/ground/cosmic_gnerot_albedo.dds
	set_texture_alias normal			materials/textures/units/ground/gnerot_caverns_normal.dds
	set_texture_alias packed			materials/textures/units/ground/gnerot_caverns_packed.dds
	set_texture_alias emissive			materials/textures/units/ground/cosmic_gnerot_emissive.dds
	set_texture_alias gradient			materials/textures/gradient/cloudy_gradient.dds 174 8

	glow 5
	
}

material units/ground/underground_rock : 	pbr/default
{
	set_texture_alias albedo			materials/textures/units/ground/gnerot/underground_rock_albedo.dds
	set_texture_alias normal			materials/textures/units/ground/gnerot/underground_rock_normal.dds
	set_texture_alias packed			materials/textures/units/ground/gnerot/underground_rock_packed.dds
	set_texture_alias emissive			materials/textures/units/ground/gnerot/underground_rock_emissive.dds

	glow 6
}

material gui/menu/species/fauna/cosmic_gnerot_boss : gui/default
{
	set_texture_alias diffuse materials/textures/gui/menu/species/fauna/cosmic_gnerot_boss.dds
}

material gui/hud/fauna/cosmic_gnerot_boss_icon : gui/unsharp
{
	set_texture_alias diffuse materials/textures/gui/hud/fauna/cosmic_gnerot_boss_icon.dds
}

