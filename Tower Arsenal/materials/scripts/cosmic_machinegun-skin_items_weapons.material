// cosmic_machinegun

material items/weapons/cosmic_machinegun : pbr/default
{
	dissolve 0 10 20 1

	set_texture_alias albedo			materials/textures/items/weapons/cosmic_machinegun_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/small_machinegun_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/small_machinegun_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_machinegun_emissive.dds

	glow 3
}

