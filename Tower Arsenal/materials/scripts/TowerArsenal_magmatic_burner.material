import * from "materials/scripts/pbr.material"
import * from "materials/scripts/buildings_base.material"
import * from "materials/scripts/gui.material"

material buildings/resources/magmatic_burner : buildings/destructible
{
	set_texture_alias albedo			materials/textures/buildings/resources/magmatic_burner_albedo.dds
	set_texture_alias normal			materials/textures/buildings/resources/water_filtering_plant_normal.dds
	set_texture_alias packed			materials/textures/buildings/resources/water_filtering_plant_packed.dds
	set_texture_alias emissive			materials/textures/buildings/resources/magmatic_burner_emissive.dds
}

material buildings/resources/magmatic_burner_dissolve : pbr/height_dissolve
{
	set_texture_alias albedo			materials/textures/buildings/resources/magmatic_burner_albedo.dds
	set_texture_alias normal			materials/textures/buildings/resources/water_filtering_plant_normal.dds
	set_texture_alias packed			materials/textures/buildings/resources/water_filtering_plant_packed.dds
	set_texture_alias emissive			materials/textures/buildings/resources/magmatic_burner_emissive.dds
}

//buildings/resources/magmatic_burner build icons

material gui/hud/building_icons/magmatic_burner : gui/default
{
	set_texture_alias diffuse materials/textures/gui/hud/building_icons/magmatic_burner.dds
}

material gui/hud/building_icons/magmatic_burner_disabled : gui/default
{
	set_texture_alias diffuse materials/textures/gui/hud/building_icons/magmatic_burner_disabled.dds
}

material gui/hud/building_icons/magmatic_burner_lvl2 : gui/default
{
	set_texture_alias diffuse materials/textures/gui/hud/building_icons/magmatic_burner_lvl2.dds
}

material gui/hud/building_icons/magmatic_burner_lvl2_disabled : gui/default
{
	set_texture_alias diffuse materials/textures/gui/hud/building_icons/magmatic_burner_lvl2_disabled.dds
}

material gui/hud/building_icons/magmatic_burner_lvl3 : gui/default
{
	set_texture_alias diffuse materials/textures/gui/hud/building_icons/magmatic_burner_lvl3.dds
}

material gui/hud/building_icons/magmatic_burner_lvl3_disabled : gui/default
