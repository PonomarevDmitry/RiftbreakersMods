import * from "materials/scripts/units_base.material"
import * from "materials/scripts/gui.material"

material units/ground/cosmic_kafferroceros : 		units/ground/black_blood
{
	set_texture_alias albedo			materials/textures/units/ground/cosmic_kafferroceros_albedo.dds
//	set_texture_alias normal			materials/textures/units/ground/kafferroceros_normal.dds
	set_texture_alias packed			materials/textures/units/ground/kafferroceros_packed.dds
	set_texture_alias emissive			materials/textures/units/ground/cosmic_kafferroceros_emissive.dds
	set_texture_alias gradient			materials/textures/gradient/cloudy_gradient.dds 168 5

	glow 5
}

material gui/menu/species/fauna/cosmic_kafferroceros : gui/default
{
	set_texture_alias diffuse materials/textures/gui/menu/species/fauna/cosmic_kafferroceros.dds
}

material gui/hud/fauna/cosmic_kafferroceros_icon : gui/unsharp
{
	set_texture_alias diffuse materials/textures/gui/hud/fauna/cosmic_kafferroceros_icon.dds
}

