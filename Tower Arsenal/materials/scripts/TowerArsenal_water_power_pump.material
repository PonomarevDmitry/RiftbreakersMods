import * from "materials/scripts/pbr.material"
import * from "materials/scripts/buildings_base.material"
import * from "materials/scripts/gui.material"

material buildings/energy/water_power_pump : buildings/destructible
{
	set_texture_alias albedo			materials/textures/buildings/energy/water_power_pump_albedo.dds
	set_texture_alias normal			materials/textures/buildings/energy/animal_biomass_powerplant_normal.dds
	set_texture_alias packed			materials/textures/buildings/energy/animal_biomass_powerplant_packed.dds
	set_texture_alias emissive		materials/textures/buildings/energy/water_power_pump_emissive.dds
}

material buildings/energy/water_power_pump_dissolve  : pbr/height_dissolve
{
	set_texture_alias albedo				materials/textures/buildings/energy/water_power_pump_albedo.dds
	set_texture_alias normal			materials/textures/buildings/energy/animal_biomass_powerplant_normal.dds
	set_texture_alias packed			materials/textures/buildings/energy/animal_biomass_powerplant_packed.dds
	set_texture_alias emissive		materials/textures/buildings/energy/water_power_pump_emissive.dds
}

//buildings/energy/water_power_pump build icons

material gui/hud/building_icons/water_power_pump : gui/default
{
	set_texture_alias diffuse materials/textures/gui/hud/building_icons/water_power_pump.dds
}

material gui/hud/building_icons/water_power_pump_disabled : gui/default
{
	set_texture_alias diffuse materials/textures/gui/hud/building_icons/water_power_pump_disabled.dds
