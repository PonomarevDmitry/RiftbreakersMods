// fire_cluster_spitter

material items/consumables/cosmic_grenade : pbr/default
{

	set_texture_alias albedo			materials/textures/items/consumables/cosmic_grenade_albedo.dds
	set_texture_alias normal			materials/textures/items/consumables/hand_grenade_normal.dds
	set_texture_alias packed			materials/textures/items/consumables/hand_grenade_packed.dds
	set_texture_alias emissive			materials/textures/items/consumables/cosmic_grenade_emissive.dds

	glow 3
}

material items/consumables/cosmic_grenade_advanced : pbr/default
{

	set_texture_alias albedo			materials/textures/items/consumables/cosmic_grenade_albedo.dds
	set_texture_alias normal			materials/textures/items/consumables/hand_grenade_normal.dds
	set_texture_alias packed			materials/textures/items/consumables/hand_grenade_packed.dds
	set_texture_alias emissive			materials/textures/items/consumables/cosmic_grenade_emissive.dds

	glow 3
}

material items/consumables/cosmic_grenade_superior : pbr/default
{
	set_texture_alias albedo			materials/textures/items/consumables/cosmic_grenade_albedo.dds
	set_texture_alias normal			materials/textures/items/consumables/hand_grenade_normal.dds
	set_texture_alias packed			materials/textures/items/consumables/hand_grenade_packed.dds
	set_texture_alias emissive			materials/textures/items/consumables/cosmic_grenade_emissive.dds

	glow 3.5
}

material items/consumables/cosmic_grenade_extreme : pbr/default
{
	set_texture_alias albedo			materials/textures/items/consumables/cosmic_grenade_albedo.dds
	set_texture_alias normal			materials/textures/items/consumables/hand_grenade_normal.dds
	set_texture_alias packed			materials/textures/items/consumables/hand_grenade_packed.dds
	set_texture_alias emissive			materials/textures/items/consumables/cosmic_grenade_emissive.dds

	glow 4
}

