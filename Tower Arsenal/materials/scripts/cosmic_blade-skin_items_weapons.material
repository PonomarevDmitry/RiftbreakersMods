// cosmic_blade

material items/weapons/cosmic_blade : pbr/default
{

	set_texture_alias albedo			materials/textures/items/weapons/cosmic_blade_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/flame_blade_lvl_1_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/flame_blade_lvl_1_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_blade_emissive.dds

	glow 8
}

material items/weapons/cosmic_blade_advanced : pbr/default
{

	set_texture_alias albedo			materials/textures/items/weapons/cosmic_blade_advanced_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/flame_blade_lvl_2_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/flame_blade_lvl_2_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_blade_advanced_emissive.dds

	glow 9
}

material items/weapons/cosmic_blade_superior : pbr/default
{
	set_texture_alias albedo			materials/textures/items/weapons/cosmic_blade_superior_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/flame_blade_lvl_3_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/flame_blade_lvl_3_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_blade_superior_emissive.dds

	glow 10
}

material items/weapons/cosmic_blade_extreme : pbr/default
{
	set_texture_alias albedo			materials/textures/items/weapons/cosmic_blade_extreme_albedo.dds
	set_texture_alias normal			materials/textures/items/weapons/flame_blade_lvl_4_normal.dds
	set_texture_alias packed			materials/textures/items/weapons/flame_blade_lvl_4_packed.dds
	set_texture_alias emissive			materials/textures/items/weapons/cosmic_blade_extreme_emissive.dds

	glow 11
