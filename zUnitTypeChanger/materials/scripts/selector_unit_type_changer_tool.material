import * from "materials/scripts/selector.material"

material selector/marker_unit_type_add_invisible_tool : selector/marker_base
{
	set_texture_alias diffuse			materials/textures/selector/marker_unit_type_add_invisible_tool.dds
	set_texture_alias emissive			materials/textures/selector/marker_unit_type_add_invisible_tool_emissive.dds

	technique
	{
		pass
		{
			depth_check			off
			depth_write			off
		}
	}
}



material selector/marker_unit_type_remove_invisible_tool : selector/marker_base
{
	set_texture_alias diffuse			materials/textures/selector/marker_unit_type_remove_invisible_tool.dds
	set_texture_alias emissive			materials/textures/selector/marker_unit_type_remove_invisible_tool_emissive.dds

	technique
	{
		pass
		{
			depth_check			off
			depth_write			off
		}
	}
}