EntityBlueprint
{
	name  "buildings/defense/shield_generator_ion/shield_ion"

	IdDesc
	{
		name "_shield_"
	}

	HealthDesc
	{
		max_health 					"900"
		health 						"1"
	}

	//Required. The Reflection script sources data from this, and will crash if it is missing.
	LuaDesc
	{
		database
		{
			//How much faster the shield decays when unpowered than it regenerates when powered.
			//Must be positive, or the shield will regenerate when unpowered.
			//"0" means "no decay", "1" means "equal rate"
			decay_multiplier 	float:"2.0"
		}
	}

	//Required. The Reflection script sources data from this, and will crash if it is missing.
	ReflectDamageComponent
	{
		melee_only		"1"
		reflect_type	"damage_ratio"	// health_ratio, damage_ratio, flat_damage
		damage_value	"1.0"
		damage_type		"energy"	// optional, if not provided damage type will be set to "reflect"

	}

	//Required. The Reflection script sources data from this, and will crash if it is missing.
	ReflectHighlightComponent
	{
		submesh_idx 	2
		glow_factor 	100
		flash_time		0.2		//Optional.
	}

	//Required. The Reflection script sources data from this, and will crash if it is missing.
	RegenerationComponent
	{
		//I recommend a regen rate of 5% max HP per second, with a long cooldown of 7-10 seconds.
		regeneration 				"40"	//50
		regeneration_cooldown 		"6"
	}

	EffectDesc
	{
		EffectGroup
		{
			group "shield_down"
			enabled "0"

			Effects
			{
				Effect
				{
					blueprint "effects/buildings_and_machines/shield_ion_down"
				}
			}
		}
	}

	ShieldComponent
	{
		owner	"custom"
		highlight_material	"highlight/shield_ion"
	}
}