import * from "materials/scripts/pbr.material"

material units/drones/bullet_drone_attack : pbr/units
{
	set_texture_alias albedo			materials/textures/units/drones/bullet_drone_attack_albedo.dds
	set_texture_alias normal			materials/textures/units/drones/drone_attack_normal.dds
	set_texture_alias packed			materials/textures/units/drones/drone_attack_packed.dds
	set_texture_alias emissive			materials/textures/units/drones/bullet_drone_attack_emissive.dds

	glow 6
}

