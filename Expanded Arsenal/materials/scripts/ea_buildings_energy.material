import * from "materials/scripts/pbr.material"
import * from "materials/scripts/buildings_base.material"

material buildings/energy/cascade_reactor : buildings/destructible
{
	set_texture_alias albedo			materials/textures/buildings/energy/cascade_reactor_albedo.dds
	set_texture_alias normal			materials/textures/buildings/energy/cascade_reactor_normal.dds
	set_texture_alias packed			materials/textures/buildings/energy/cascade_reactor_packed.dds
	set_texture_alias emissive			materials/textures/buildings/energy/cascade_reactor_emissive.dds
	
	glow 2
}

material buildings/energy/cascade_reactor_dissolve  : pbr/height_dissolve
{
	set_texture_alias albedo			materials/textures/buildings/energy/cascade_reactor_albedo.dds
	set_texture_alias normal			materials/textures/buildings/energy/cascade_reactor_normal.dds
	set_texture_alias packed			materials/textures/buildings/energy/cascade_reactor_packed.dds
	set_texture_alias emissive			materials/textures/buildings/energy/cascade_reactor_emissive.dds
}

