import * from "materials/scripts/pbr.material"
import * from "materials/scripts/buildings_base.material"

material buildings/main/artificial_spawner : pbr/alpha_test
{
	set_texture_alias albedo			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_albedo.dds
	set_texture_alias normal			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_normal.dds
	set_texture_alias packed			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_packed.dds
	set_texture_alias emissive			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_emissive.dds
}

material buildings/main/artificial_spawner_dissolve : pbr/height_dissolve
{
	set_texture_alias albedo			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_albedo.dds
	set_texture_alias normal			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_normal.dds
	set_texture_alias packed			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_packed.dds
	set_texture_alias emissive			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_emissive.dds
}

material buildings/main/artificial_spawner_core : pbr/alpha_test
{
	set_texture_alias albedo			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_albedo.dds
	set_texture_alias normal			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_normal.dds
	set_texture_alias packed			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_packed.dds
	set_texture_alias emissive			materials/textures/props/special/loot_containers/loot_container_caverns_extreme_emissive.dds

	glow 3
	render_group 29
}

material buildings/main/artificial_spawner_core_dissolve : pbr/height_dissolve
{
	set_texture_alias albedo			materials/textures/buildings/main/headquarters_albedo.dds
	set_texture_alias normal			materials/textures/buildings/main/headquarters_normal.dds
	set_texture_alias packed			materials/textures/buildings/main/headquarters_packed.dds
	set_texture_alias emissive			materials/textures/buildings/main/headquarters_emissive.dds
}